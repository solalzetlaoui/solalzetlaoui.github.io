---
import Layout from '../layouts/Layout.astro';
import '../styles/global.css';
import { YouTube } from '@astro-community/astro-embed-youtube';
---

<Layout title="Solal Zetlaoui Portfolio">
    <main>
        <div class="min-width-full h-screen fixed inset-0 flex z-[-3] bg-tertiary">
            <video class="w-full h-full object-cover opacity-80" autoplay loop muted playsinline preload="auto">
              <source src="/Background_reel_mobile.mp4" media="(max-width: 640px)" type="video/mp4" />
              <source src="/Background_reel.mp4" type="video/mp4" />
            </video>
        </div>
        <div class="fixed bottom-1/4 pl-hmc z-[-2]">
            <p>
                <span class="block text-hero">Hi, I'm Solal.</span>
                <span class="block text-hero">Nice to meet you.</span>
            </p>
        </div>
        
        <a class="fixed bottom-10 left-1/2 fill-primary hover:fill-secondary transition-colors duration-300 z-[-1] cursor-pointer" id="chevron"><svg class="w-12 h-12  transform -translate-x-1/2" id="Layer_1" data-name="Layer 1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 99.28 56.78">
            <path class="cls-1" d="M49.65,56.78L1.52,7.54C-.54,5.43-.5,2.06,1.61,0h0s44.17,45.25,44.17,45.25c2.98,3.05,4.4,7.3,3.87,11.53h0Z"/>
            <path class="cls-1" d="M49.65,56.76L97.76,7.54c2.06-2.11,2.02-5.48-.09-7.54h0s-44.18,45.26-44.18,45.26c-2.97,3.05-4.39,7.28-3.85,11.5h0Z"/>
          </svg>
        </a>
        <section id="content" class="bg-tertiary mt-screen z-0 relative min-h-screen px-cpc 2xl:px-bpc">
            <div class="pt-20 grid grid-cols-1">
                <div>
                    <p class="text-md py-3"><b> I'm an animator and motion designer </b> based in Paris. Ever since I completed my Bachelor in Motion Design, I have been selfteaching in animation and illustration. Driven by a <b>keen passion for visual storytelling, I&nbsp;am dedicated to improving my&nbsp;skills and hone my craft&nbsp;! </b></h3>
                    <div class="my-6">
                      <p><a class="text-md textmarker-effect" href="/works">&#8594; All my works &#8592;</a></p>
                      <p><a class="text-md textmarker-effect" href="/about">&#8594; More about me &#8592;</a></p>
                    </div>
                  </div>
            </div>
            <div class="py-12">
              <div class="grid-cols-1 flex flex-col items-center">
                  <p class="my-6 text-lg">&#8595; 2025 Showreel &#8595;</p>
              </div>
              <div>
                <div class="aspect-video w-full flex justify-center items-center">
                  <div class="w-full aspect-video">
                  <YouTube id="gljvNGoIyGM" class="!max-w-full" posterQuality="high"/>
                  </div>
                </div>
              </div>
              
            </div>
            
        </section>
    </main>
    
<script>
 document.addEventListener('DOMContentLoaded', function() {
    // Smooth scroll for chevron
    const btn = document.getElementById('chevron');
    const target = document.getElementById('content');
    if (btn && target) {
      btn.addEventListener('click', function(e) {
        e.preventDefault();
        target.scrollIntoView({ behavior: 'smooth' });
      });
    }
  });
  
  document.addEventListener('DOMContentLoaded', function() {
  const video = document.querySelector('video');
  if (video) {
    const playPromise = video.play();
    
    if (playPromise !== undefined) {
      playPromise.catch(error => {
        // Only set poster if autoplay fails
        video.poster = '/src/assets/background_fallback.webp';
        video.setAttribute('data-autoplay-failed', 'true');
      });
    }
  }
});
</script>


</Layout>
