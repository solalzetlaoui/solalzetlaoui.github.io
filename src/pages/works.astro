  { src: "/BBR.webp", name: "BONBONRAMA", link: "/work/bonbonrama" },
];
---

<Layout title="Solal Zetlaoui Portfolio Works Animation & Motion Design" >
  <main>
    <section class="min-h-screen pt-24 bg-neutral-950">
      <div class="flex items-center justify-around lg:big-padding-clamp">
        <div><p id="show-animation" class="cursor-pointer py-2 px-3 font-bold outline outline-grid rounded-lg">Animation</p></div>
        
        <div><p id="show-artworks" class="cursor-pointer py-2 px-3 opacity-50 outline outline-grid rounded-lg">Artworks</p></div>
        
      </div>
      <div id="animation" class="grid grid-cols-1 common-padding-clamp lg:big-padding-clamp sm:grid-cols-2 lg:grid-cols-3 gap-3">
        {work.map(work => (
          <div class="relative group">
            <a href={work.link}>
                <img src={work.src} class="object-cover rounded-sm" alt={work.name}>
                <p class="absolute inset-0 px-6 flex items-center justify-center text-primary text-lg bg-black bg-opacity-80 opacity-0 group-hover:opacity-100 transition-opacity duration-300 text-center">
                  {work.name}
                </p>
            </a>
          </div>
        ))}
      </div>
      <div id="artworks" class="hidden">
        <div class="grid grid-cols-[repeat(auto-fit,minmax(240px,1fr))] common-padding-clamp  gap-2 no-right-click">
