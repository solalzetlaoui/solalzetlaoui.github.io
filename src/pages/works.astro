            <div class=" sm:row-span-1" ><img class="w-full h-full object-cover" src="/Background_6.webp"></div>
            <div class=" sm:row-span-2 sm:col-span-2" ><img class="w-full h-full object-cover" src="/589.webp"></div>
            <div class=" sm:row-span-1" ><img class="w-full h-full object-cover" src="/Illustration_sans_titre.webp"></div>
            <div class=" sm:row-span-1" ><img class="w-full h-full object-cover" src="/591.webp"></div>
            <div class=" sm:row-span-1" ><img class="w-full h-full object-cover" src="/587.webp"></div>
            <div class=" sm:row-span-1" ><img class="w-full h-full object-cover" src="/582.webp"></div>
