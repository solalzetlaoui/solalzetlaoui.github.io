            <div class=" sm:row-span-1" ><img class="w-full h-full object-cover" src="/Whenever_you_re_ready.webp"></div>
        </div>
      </div>
    </section>
    <script>
      document.addEventListener('DOMContentLoaded', function() {
        const showArtworks = document.getElementById('show-artworks');
        const showAnimation = document.getElementById('show-animation');
        const artworks = document.getElementById('artworks');
        const animation = document.getElementById('animation');

        if (showArtworks && showAnimation && artworks && animation) {
          showArtworks.addEventListener('click', function() {
            artworks.classList.remove('hidden');
            animation.classList.add('hidden');
            showArtworks.classList.add('font-bold');
            showArtworks.classList.remove('opacity-50');
            showAnimation.classList.remove('font-bold');
            showAnimation.classList.add('opacity-50');
          });

          showAnimation.addEventListener('click', function() {
            animation.classList.remove('hidden');
            artworks.classList.add('hidden');
            showAnimation.classList.add('font-bold');
            showAnimation.classList.remove('opacity-50');
            showArtworks.classList.remove('font-bold');
            showArtworks.classList.add('opacity-50');
          });
        }

        // Disable right-click on images
        const images = document.querySelectorAll('.no-right-click');
        images.forEach(img => {
          img.addEventListener('contextmenu', function(e) {
            e.preventDefault();
          });
        });
      });
    </script>
  </main>
</Layout>