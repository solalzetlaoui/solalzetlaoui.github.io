---
interface Props {
    title: string;
    context: string;
    videoUrl: string;
    credits: string[];
    previousUrl: string;
    nextUrl: string
}

const {title, context, videoUrl, credits, previousUrl, nextUrl} = Astro.props;
---

<div class="px:bpc sm:px-bpc">
    <p class="text-primary text-xl font-bold">Project : {title}</p>
    <p class="text-primary text-md">{context}</p>
    <div class="my-6">
            <lite-youtube style="max-width:100%;aspect-ratio:16/9;" videoid={videoUrl}></lite-youtube>
        
    </div>
    <ul class="text-primary text-xsm ">
        {credits.map(line => <li class="pt-1">{line}</li>)}
    </ul>
    <div class="my-6 flex justify-between ">
        <a href={previousUrl} class="text-md textmarker-effect cursor-pointer">&#8592; Previous</a>
        <a href={nextUrl} class="text-md textmarker-effect cursor-pointer">Next &#8594;</a>
    </div>
    
    
</div>