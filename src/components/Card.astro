---
import type {ImageMetadata} from 'astro';
import { Image } from 'astro:assets';

interface Props {
    imagePath: string;
    videoPath: string;
    altText: string;
    title: string;
    context: string;
    type:string;
}

const { imagePath, videoPath, altText, title, context, type} = Astro.props;
---



<div class="group">
    <img src={imagePath} alt={altText} class="w-full h-auto object-cover" />
        <video src={videoPath} class="video w-full h-auto absolute inset-0 object-cover opacity-0 group-hover:opacity-100 transition-opacity duration-300 z-0" muted loop playsinline></video> 
        <div class="absolute inset-0 bg-secondary bg-opacity-70 opacity-0 group-hover:opacity-20 transition-opacity duration-300 z-0">
        </div>
        <div class="absolute inset-0 pl-3 pt-2 sm:opacity-0 sm:group-hover:opacity-100 sm:transition-opacity sm:duration-300 z-2">
            <p class="text-primary text-md"><b>{title}</b></p>
            <p class="text-primary text-xsm font-bold">{context}</p>
            <p class="text-primary text-xsm">{type}</p>
        </div>
</div>
    

        